package threads;

public class Main {

	public static void main(String[] args) {
		Counter counter = new Counter() ; // shared object
		
		
		Thread t1 = new Thread(() -> {
			for (int i = 0; i < 1000; i++) {
				counter.increment();
			}
		});
		
		Thread t2 = new Thread(()-> {
			for (int i = 0 ; i < 1000; i++) {
				counter.decrement();
			}
		});

	}

}
